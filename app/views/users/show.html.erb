<h1><%= @user.username %>'s Events</h1>

<% @user.created_events.each do |event| %>
  <div>
    <%= link_to event.title, event %>
  </div>
<% end %>

<% if user_signed_in?  %>
  <%= link_to "Sign Out", destroy_user_session_path, 'data-turbo-method': :delete %>
<% else %>
  <%= link_to "Sign in", new_user_session_path %>
<% end %>
